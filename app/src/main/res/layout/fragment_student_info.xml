<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hoten"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Họ Tên :"
        android:textColor="#EC1313"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/birthday"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@+id/hoten"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Năm Sinh :"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/adress"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@+id/birthday"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Địa Chỉ :"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_below="@+id/adress"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Email :"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/hotentxt"

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="198dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@id/hoten"
        android:textColor="#F44336" />

    <TextView
        android:id="@+id/txtbirthday"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/hotentxt"

        android:layout_marginLeft="162dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@id/birthday" />

    <TextView
        android:id="@+id/txtadress"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/txtbirthday"

        android:layout_marginLeft="157dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="11dp"
        android:layout_toRightOf="@id/adress" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/txtadress"

        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_toRightOf="@id/email" />
</RelativeLayout>